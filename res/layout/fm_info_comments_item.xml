<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ac_main_info_selector"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/fm_info_comts_item_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/list_default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fm_info_comts_item_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fm_info_comts_item_timeloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />
        
         <TextView
             android:id="@+id/fm_info_comts_item_cotent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/info_cotent_text_color"
            android:textSize="13sp" />
         
          <TextView
              android:id="@+id/fm_info_comts_item_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp" />
        
    </LinearLayout>

</LinearLayout>