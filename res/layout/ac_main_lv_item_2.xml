<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ac_main_info_selector"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/ac_main_lv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="公积金异地贷款仅需书面证明"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/ac_main_lv_item_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_lv_item_title"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_default_image" />

    <TextView
        android:id="@+id/ac_main_lv_item_commentcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ac_main_lv_item_pic"
        android:text="19评"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/ac_main_lv_item_commentcount"
        android:layout_marginTop="10dp"
        android:background="@color/main_bg" />

</RelativeLayout>