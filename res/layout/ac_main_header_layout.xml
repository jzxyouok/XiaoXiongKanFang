<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.beiing.xiaoxiongkanfang.widget.TopView
        android:id="@+id/ac_main_ad_pager"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ac_main_grid_xinfang"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_xinfang_selector"
                android:text="新房" />

            <TextView
                android:id="@+id/ac_main_grid_ershou"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_ershoufang_selector"
                android:text="二手房" />

            <TextView
                android:id="@+id/ac_main_grid_zufang"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_zufang_selector"
                android:text="租房" />

            <TextView
                android:id="@+id/ac_main_grid_zixun"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_zixun_selector"
                android:text="资讯" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ac_main_grid_youhui"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_dazheyouhui_selector"
                android:text="打折优惠" />

            <TextView
                android:id="@+id/ac_main_grid_kaipan"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_zuixinkaipan_selector"
                android:text="最新开盘" />

            <TextView
                android:id="@+id/ac_main_grid_calculate"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_fangdaijisuan_selector"
                android:text="房贷计算" />

            <TextView
                android:id="@+id/ac_main_grid_more"
                style="@style/ac_main_header_grid_style"
                android:drawableTop="@drawable/ac_main_gengduo_selector"
                android:text="更多" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ac_main_more_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ac_main_more_qb"
            style="@style/ac_main_header_grid_style"
            android:drawableLeft="@drawable/more_ic_qb"
            android:text="领Q币" />

        <TextView
            android:id="@+id/ac_main_kf_group"
            style="@style/ac_main_header_grid_style"
            android:drawableLeft="@drawable/more_ic_group"
            android:text="看房团" />

        <TextView
            android:id="@+id/ac_main_remind"
            style="@style/ac_main_header_grid_style"
            android:drawableLeft="@drawable/more_ic_remind"
            android:text="还贷提醒" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/main_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:text="最新资讯"
        android:textSize="12sp" />

</LinearLayout>