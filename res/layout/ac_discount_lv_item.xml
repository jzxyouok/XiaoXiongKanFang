<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/discount_item_bg"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/ac_dc_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="永定河孔雀城英国宫"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ac_dc_item_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/list_default_image" />

        <TextView
            android:id="@+id/ac_dc_item_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="北京大兴野生动物园向南3公里，106国道东" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ac_dc_item_pre_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="均价" />

            <TextView
                android:id="@+id/ac_dc_item_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8000"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/ac_dc_item_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/平米" />
        </LinearLayout>

        <TextView
            android:id="@+id/ac_dc_item_discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_tag"
            android:drawablePadding="5dp"
            android:text="优惠：3.5万抵7万"
            android:textColor="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ac_dc_item_get_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cinya_selector"
                android:text="获取优惠"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/ac_dc_item_dial_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cinya_selector"
                android:text="电话咨询"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>