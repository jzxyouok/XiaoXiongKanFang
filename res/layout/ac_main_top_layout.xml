<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_cinya"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" 
        android:id="@+id/ac_main_ll_top">

        <TextView
            android:id="@+id/ac_main_city_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:drawableRight="@drawable/icon_title_down_arrow"
            android:gravity="center"
            android:text="北京"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ac_main_search_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableStart="@drawable/ic_magnifier"
            android:layout_weight="6.5"
            android:text="区域/楼盘/开发商"
            android:textColor="@color/white"
            android:background="@drawable/btn_my_qb_pressed"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/ac_main_sao_ib"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/ac_main_top_sao_selector" />
    </LinearLayout>