<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" 
    android:clickable="true"
    android:id="@+id/fm_xf_model4_ll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主力户型"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/setting_arrow"
            android:text="查看全部户型图" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fm_xf_model4_cover1_iv"
            android:gravity="center"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/list_default_image" />

        <ImageView
             android:id="@+id/fm_xf_model4_cover2_iv"
             android:gravity="center"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:background="@drawable/list_default_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" >

        <TextView
             android:id="@+id/fm_xf_model4_tag1_tv"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp" 
            android:text="3室2厅1卫89平米"/>

        <TextView
               android:id="@+id/fm_xf_model4_tag2_tv"
            android:gravity="center"
             android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             android:text="3室2厅2卫90平米"
             />
    </LinearLayout>

</LinearLayout>